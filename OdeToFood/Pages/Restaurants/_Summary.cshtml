@using OdeToFood.Core
@model Restaurant

<div class="card card-default">
    <div class="card-header">
        <h3>@Model.Name</h3>
    </div>
    <div class="card-body">
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.Cuisine</span>
    </div>
    <div class="card-footer">
        <a class="btn"
           asp-page="./Detail"
           asp-route-restaurantId="@Model.Id">
            Detail
        </a>
        <a class="btn"
           asp-page="./Edit"
           asp-route-restaurantId="@Model.Id">
            Edit
        </a>
        <a class="btn"
           asp-page="./Delete"
           asp-route-restaurantId="@Model.Id">
            Delete
        </a>
    </div>
</div>