    <input asp-for="Dob" type="text" class="form-control" placeholder="Date of Birth">
</div>
<div class="form-group">
    <label for="Email">Email</label>
    <input asp-for="Email" type="text" class="form-control" placeholder="Email">
</div>
<div class="form-group">
    <label for="Phone">Phone</label>
    <input asp-for="Phone" type="text" class="form-control" placeholder="Phone">
</div>

<hr class="featurette-divider-thin">

<div class="form-group">
    <label for="Address">Address</label>
    <input asp-for="Street" type="text" class="form-control" placeholder="Address">
</div>
<div class="form-group">
